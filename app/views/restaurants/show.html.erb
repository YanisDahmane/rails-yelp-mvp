<p style="color: green"><%= notice %></p>

<%= render @restaurant %>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :integer %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<div style="min-height: 5px; background-color: black; margin: 8px"></div>
<div style="min-height: 5px; background-color: black; margin: 8px"></div>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <%= link_to "Delete",
          review_path(review),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </li>
    <% end %>
  </ul>
  <br>
<div style="min-height: 5px; background-color: black; margin: 8px"></div>
<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
